<div class="container">
    <main class="main-content">
        <h1>Создать подписку</h1>
        <form id="subscription-form" action="/createSubscription" method="post">
            <label for="subscription-name">Название подписки:</label>
            <input type="text" id="subscription-name" name="title" placeholder="Введите название" >

            <label for="subscription-price">Цена подписки:</label>
            <input type="number" id="subscription-price" name="price" placeholder="Введите цену" >
            {{#each errors}}
            <p style="color:#f00;margin:0">{{this.msg}}</p>
            {{/each}}
            <button type="button" class="add-product-btn">+</button>

            <div id="product-list">
                {{#each products}}
                <div class="product-item" id="{{this.id}}">
                    <span><strong>Продукт:</strong>{{this.name}}</span>
                    <span><strong>Количество:</strong>{{this.quantity}}</span>
                    <button class="delete-btn">×</button>
                </div>
                {{/each}}
            </div>

            <button type="submit" class="submit-btn">Создать подписку</button>
        </form>
    </main>
</div>

<div class="popup" id="product-popup">
    <div class="popup-content">
        <span class="close-btn">&times;</span>
        <h2>Добавить продукт</h2>
        <form id="product-form" enctype="multipart/form-data">
            <label for="product-name">Название продукта:</label>
            <input type="text" name="name" id="product-name" >

            <label for="product-quantity">Количество:</label>
            <input type="number" name="quantity" id="product-quantity" >

            <button type="submit" class="create-btn">Добавить</button>
        </form>
    </div>
</div>
<script src="/scripts/createSubscription.js"></script>